rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
  
    // Helper function to check if user is authenticated
    function isAuthenticated() {
      return request.auth != null;
    }
    
    // Helper function to check if user is accessing their own document
    function isOwner(userId) {
      return request.auth.uid == userId;
    }

    // Helper function to fetch requestor data
    function getUserData() {
      return get(/databases/$(database)/documents/users/$(request.auth.uid)).data;
    }
    
    function isSalesRep() {
      return getUserData().role == 'salesRep';
    }

    function isAdmin() {
      return getUserData().role == 'manager' || getUserData().role == 'director';
    }

    // Rules for 'users' collection
    match /users/{userId} {
      allow read: if isAuthenticated();
      // Allow creating own profile OR Admin creating any profile
      allow create: if isOwner(userId) || isAdmin();
      // Allow updating own profile OR Sales Rep (approvals) OR Admin
      allow update: if isOwner(userId) || isSalesRep() || isAdmin();
      // Allow delete only for internal system cleanup (Admins)
      allow delete: if isAdmin();
    }
    
    // Rules for 'registered_clerks'
    match /registered_clerks/{clerkId} {
      allow read, write: if isAuthenticated();
    }
    
    // Rules for 'scans'
    match /scans/{scanId} {
      allow read, write: if isAuthenticated();
    }
    
    // Rules for 'pharmacies'
    match /pharmacies/{pharmacyId} {
      allow read: if true;
      allow write: if isAdmin();
    }

    // Rules for 'products'
    match /products/{productId} {
      allow read: if isAuthenticated();
      allow write: if isAdmin();
    }

    // Rules for 'product_lines' (New Dynamic Categories)
    match /product_lines/{lineId} {
      allow read: if isAuthenticated();
      allow write: if isAdmin();
    }

    // Rules for 'rewards'
    match /rewards/{rewardId} {
      allow read: if isAuthenticated();
      allow write: if isAdmin();
    }
    
    // Rules for 'redemption_requests'
    match /redemption_requests/{requestId} {
      allow read: if isAuthenticated(); // Users need to read their own (optimize later if needed), Admin reads all
      allow create: if isAuthenticated();
      allow update: if isAdmin();
      allow delete: if isAdmin();
    }

    // Rules for 'levels' (Gamification)
    match /levels/{levelId} {
      allow read: if isAuthenticated();
      allow write: if isAdmin();
    }

    // Rules for 'identity_scans' (for Cedula OCR)
    match /identity_scans/{scanId} {
      allow read, write: if isAuthenticated();
    }

    // Rules for 'locations' (Dominican Republic Political Divisions)
    match /locations/{locationId} {
      allow read: if isAuthenticated(); // Anyone can read locations
      allow write: if isAdmin(); // Only admins can seed/modify
    }
  }
}
